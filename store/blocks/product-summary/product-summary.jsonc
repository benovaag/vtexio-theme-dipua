  "flex-layout.col#product-name-and-price":{
    "children": [
      "product-summary-name",
      "flex-layout.row#product-price"
    ],
    "props":{
      "blockClass": "product-name-and-price"
    }
  },
  "flex-layout.row#product-price":{
    "children": [
      "product-list-price#summary",
